class Solution {
    public int mySqrt(int x) {
        if(x == 0) return 0;

        long ans = 1;
        long low = 1;
        long high = x;

        while(low <= high){
            long mid = (low+high)/2;

            if(mid * mid <= x){
                ans = mid;
                low = mid+1;
            }else{
                high = mid-1;
            }
        }
        return (int)ans;
    }
}
